@{
    ViewData["Title"] = "Sekmeler";
}

<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">UI Bileşenleri /</span> Sekmeler
</h4>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bx bx-tab text-primary me-2"></i>Sekmeler Örneği
                </h5>
            </div>
            <div class="card-body">
                <!-- Sekme Başlıkları -->
                <ul class="nav nav-tabs" role="tablist" aria-label="İçerik sekmeleri">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="general-tab" data-bs-toggle="tab"
                                data-bs-target="#general" type="button" role="tab"
                                aria-controls="general" aria-selected="true">
                            <i class="bx bx-info-circle me-1"></i> Genel
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="details-tab" data-bs-toggle="tab"
                                data-bs-target="#details" type="button" role="tab"
                                aria-controls="details" aria-selected="false">
                            <i class="bx bx-detail me-1"></i> Detaylar
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="contact-tab" data-bs-toggle="tab"
                                data-bs-target="#contact" type="button" role="tab"
                                aria-controls="contact" aria-selected="false">
                            <i class="bx bx-envelope me-1"></i> İletişim
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="settings-tab" data-bs-toggle="tab"
                                data-bs-target="#settings" type="button" role="tab"
                                aria-controls="settings" aria-selected="false">
                            <i class="bx bx-cog me-1"></i> Ayarlar
                        </button>
                    </li>
                </ul>

                <!-- Sekme İçerikleri -->
                <div class="tab-content p-3 border border-top-0 rounded-bottom">
                    <div class="tab-pane fade show active" id="general" role="tabpanel"
                         aria-labelledby="general-tab" tabindex="0">
                        <h5>Genel Bilgiler</h5>
                        <p>
                            Bu sekmede genel açıklamalar yer alır. Sekmeler arası geçiş
                            Bootstrap 5 Tab bileşeni ile kontrol edilmektedir.
                        </p>
                        <p>
                            Sekmeler, içerik organizasyonu ve kullanıcı deneyimi için
                            önemli bir UI bileşenidir. Doğru şekilde uygulandığında:
                        </p>
                        <ul>
                            <li>Sayfa karışıklığını azaltır</li>
                            <li>Kullanıcının ilgili içeriği hızlıca bulmasını sağlar</li>
                            <li>Sayfa yükleme sürelerini optimize eder</li>
                        </ul>
                    </div>

                    <div class="tab-pane fade" id="details" role="tabpanel"
                         aria-labelledby="details-tab" tabindex="0">
                        <h5>Detaylar</h5>
                        <p>
                            Ürün veya hizmete ait detaylı bilgiler bu sekmede gösterilir.
                        </p>
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6>Teknik Özellikler</h6>
                                        <ul class="mb-0">
                                            <li>HTML5 Semantik Etiketler</li>
                                            <li>CSS3 Flexbox/Grid</li>
                                            <li>JavaScript ES6+</li>
                                            <li>ARIA Erişebilirlik</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6>Desteklenen Tarayıcılar</h6>
                                        <ul class="mb-0">
                                            <li>Chrome 90+</li>
                                            <li>Firefox 88+</li>
                                            <li>Safari 14+</li>
                                            <li>Edge 90+</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="contact" role="tabpanel"
                         aria-labelledby="contact-tab" tabindex="0">
                        <h5>İletişim</h5>
                        <p>
                            İletişim bilgileri ve form bağlantıları burada yer alabilir.
                        </p>
                        <div class="row mt-4">
                            <div class="col-md-4 mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar me-3">
                                        <span class="avatar-initial rounded bg-label-primary">
                                            <i class="bx bx-envelope"></i>
                                        </span>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">E-posta</small>
                                        <span>info@example.com</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar me-3">
                                        <span class="avatar-initial rounded bg-label-success">
                                            <i class="bx bx-phone"></i>
                                        </span>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Telefon</small>
                                        <span>+90 555 123 45 67</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar me-3">
                                        <span class="avatar-initial rounded bg-label-info">
                                            <i class="bx bx-map"></i>
                                        </span>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Adres</small>
                                        <span>Ankara, Türkiye</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="settings" role="tabpanel"
                         aria-labelledby="settings-tab" tabindex="0">
                        <h5>Ayarlar</h5>
                        <p>Uygulama ayarlarını buradan yönetebilirsiniz.</p>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="darkMode">
                                <label class="form-check-label" for="darkMode">Karanlık Mod</label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="notifications" checked>
                                <label class="form-check-label" for="notifications">Bildirimler</label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="language" class="form-label">Dil</label>
                            <select class="form-select" id="language">
                                <option selected>Türkçe</option>
                                <option>English</option>
                                <option>Deutsch</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Pills Örneği -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Pills (Hap) Sekmeleri</h5>
            </div>
            <div class="card-body">
                <ul class="nav nav-pills mb-3" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-home" type="button" role="tab"
                                aria-controls="pills-home" aria-selected="true">
                            Ana Sayfa
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-profile" type="button" role="tab"
                                aria-controls="pills-profile" aria-selected="false">
                            Profil
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-messages-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-messages" type="button" role="tab"
                                aria-controls="pills-messages" aria-selected="false">
                            Mesajlar
                        </button>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel"
                         aria-labelledby="pills-home-tab" tabindex="0">
                        <p class="mb-0">Ana sayfa içeriği burada görünür.</p>
                    </div>
                    <div class="tab-pane fade" id="pills-profile" role="tabpanel"
                         aria-labelledby="pills-profile-tab" tabindex="0">
                        <p class="mb-0">Profil bilgileri burada görünür.</p>
                    </div>
                    <div class="tab-pane fade" id="pills-messages" role="tabpanel"
                         aria-labelledby="pills-messages-tab" tabindex="0">
                        <p class="mb-0">Mesajlar burada listelenir.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
