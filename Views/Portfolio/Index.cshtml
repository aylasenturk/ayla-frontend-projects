@{
    ViewData["Title"] = "Ana Sayfa - Ayla Şentürk Portfolio";
}

<div class="row">
    <!-- Hoş Geldiniz Kartı -->
    <div class="col-12 mb-4">
        <div class="card">
            <div class="d-flex align-items-start row">
                <div class="col-sm-7">
                    <div class="card-body">
                        <h5 class="card-title text-primary mb-3">Hoş Geldiniz!</h5>
                        <p class="mb-4">
                            Bu web sitesi, Ayla Şentürk'ün portfolio ve UI/UX bileşen vitrinidir.
                            HTML, CSS ve JavaScript ile oluşturulmuş interaktif bileşenler, üretkenlik araçları
                            ve API entegrasyonları içerir.
                        </p>
                        <a asp-controller="Portfolio" asp-action="Projects" class="btn btn-sm btn-outline-primary">Projeleri Gör</a>
                    </div>
                </div>
                <div class="col-sm-5 text-center text-sm-left">
                    <div class="card-body pb-0 px-0 px-md-4">
                        <img src="~/img/illustrations/man-with-laptop.png" height="175" alt="Portfolio" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı Erişim Kartları -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="card-title d-flex align-items-start justify-content-between mb-4">
                    <div class="avatar flex-shrink-0">
                        <span class="avatar-initial rounded bg-label-primary">
                            <i class="bx bx-folder icon-lg"></i>
                        </span>
                    </div>
                </div>
                <h5 class="card-title mb-1">Projeler</h5>
                <p class="card-text text-muted">Web sitesi ve uygulama projelerimi inceleyin.</p>
                <a asp-controller="Portfolio" asp-action="Projects" class="stretched-link"></a>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="card-title d-flex align-items-start justify-content-between mb-4">
                    <div class="avatar flex-shrink-0">
                        <span class="avatar-initial rounded bg-label-success">
                            <i class="bx bx-book-open icon-lg"></i>
                        </span>
                    </div>
                </div>
                <h5 class="card-title mb-1">Makaleler</h5>
                <p class="card-text text-muted">Teknik yazılar ve eğitim içeriklerini okuyun.</p>
                <a asp-controller="Portfolio" asp-action="Articles" class="stretched-link"></a>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="card-title d-flex align-items-start justify-content-between mb-4">
                    <div class="avatar flex-shrink-0">
                        <span class="avatar-initial rounded bg-label-info">
                            <i class="bx bx-envelope icon-lg"></i>
                        </span>
                    </div>
                </div>
                <h5 class="card-title mb-1">İletişim</h5>
                <p class="card-text text-muted">Benimle iletişime geçin.</p>
                <a asp-controller="Portfolio" asp-action="Contact" class="stretched-link"></a>
            </div>
        </div>
    </div>
</div>

<!-- Özellikler -->
<div class="row">
    <div class="col-12 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Bu Sitede Neler Var?</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center">
                            <div class="avatar me-3">
                                <span class="avatar-initial rounded bg-label-primary">
                                    <i class="bx bx-time"></i>
                                </span>
                            </div>
                            <div>
                                <h6 class="mb-0">Üretkenlik Araçları</h6>
                                <small class="text-muted">Pomodoro, Görev Takipçisi, Tarih Seçici</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center">
                            <div class="avatar me-3">
                                <span class="avatar-initial rounded bg-label-success">
                                    <i class="bx bx-calculator"></i>
                                </span>
                            </div>
                            <div>
                                <h6 class="mb-0">Hesaplayıcılar</h6>
                                <small class="text-muted">Sıcaklık Dönüştürücü, Yaş Hesaplayıcı</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center">
                            <div class="avatar me-3">
                                <span class="avatar-initial rounded bg-label-info">
                                    <i class="bx bx-box"></i>
                                </span>
                            </div>
                            <div>
                                <h6 class="mb-0">UI Bileşenleri</h6>
                                <small class="text-muted">Flashcards, Tabs, Tooltip ve daha fazlası</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center">
                            <div class="avatar me-3">
                                <span class="avatar-initial rounded bg-label-warning">
                                    <i class="bx bxl-github"></i>
                                </span>
                            </div>
                            <div>
                                <h6 class="mb-0">API Entegrasyonları</h6>
                                <small class="text-muted">GitHub, Reddit API örnekleri</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center">
                            <div class="avatar me-3">
                                <span class="avatar-initial rounded bg-label-danger">
                                    <i class="bx bx-accessibility"></i>
                                </span>
                            </div>
                            <div>
                                <h6 class="mb-0">Erişebilirlik</h6>
                                <small class="text-muted">ARIA, Klavye navigasyonu</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center">
                            <div class="avatar me-3">
                                <span class="avatar-initial rounded bg-label-secondary">
                                    <i class="bx bx-mobile-alt"></i>
                                </span>
                            </div>
                            <div>
                                <h6 class="mb-0">Responsive Tasarım</h6>
                                <small class="text-muted">Mobil uyumlu arayüzler</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
