@{
    ViewData["Title"] = "Ana Sayfa - Ayla Senturk Portfolio";
}

<div class="row">
    <!-- Hos Geldiniz Karti -->
    <div class="col-12 mb-4">
        <div class="card">
            <div class="d-flex align-items-start row">
                <div class="col-sm-7">
                    <div class="card-body">
                        <h5 class="card-title text-primary mb-3">Hos Geldiniz!</h5>
                        <p class="mb-4">
                            Bu web sitesi, Ayla Senturk'un portfolio ve UI/UX bilesen vitrinidir.
                            HTML, CSS ve JavaScript ile olusturulmus interaktif bilesenler, uretkenlik araclari
                            ve API entegrasyonlari icerir.
                        </p>
                        <a asp-controller="Portfolio" asp-action="Projects" class="btn btn-sm btn-outline-primary">Projeleri Gor</a>
                    </div>
                </div>
                <div class="col-sm-5 text-center text-sm-left">
                    <div class="card-body pb-0 px-0 px-md-4">
                        <img src="~/img/illustrations/man-with-laptop.png" height="175" alt="Portfolio" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hizli Erisim Kartlari -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="card-title d-flex align-items-start justify-content-between mb-4">
                    <div class="avatar flex-shrink-0">
                        <span class="avatar-initial rounded bg-label-primary">
                            <i class="bx bx-folder icon-lg"></i>
                        </span>
                    </div>
                </div>
                <h5 class="card-title mb-1">Projeler</h5>
                <p class="card-text text-muted">Web sitesi ve uygulama projelerimi inceleyin.</p>
                <a asp-controller="Portfolio" asp-action="Projects" class="stretched-link"></a>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="card-title d-flex align-items-start justify-content-between mb-4">
                    <div class="avatar flex-shrink-0">
                        <span class="avatar-initial rounded bg-label-success">
                            <i class="bx bx-book-open icon-lg"></i>
                        </span>
                    </div>
                </div>
                <h5 class="card-title mb-1">Makaleler</h5>
                <p class="card-text text-muted">Teknik yazilar ve egitim iceriklerini okuyun.</p>
                <a asp-controller="Portfolio" asp-action="Articles" class="stretched-link"></a>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="card-title d-flex align-items-start justify-content-between mb-4">
                    <div class="avatar flex-shrink-0">
                        <span class="avatar-initial rounded bg-label-info">
                            <i class="bx bx-envelope icon-lg"></i>
                        </span>
                    </div>
                </div>
                <h5 class="card-title mb-1">Iletisim</h5>
                <p class="card-text text-muted">Benimle iletisime gecin.</p>
                <a asp-controller="Portfolio" asp-action="Contact" class="stretched-link"></a>
            </div>
        </div>
    </div>
</div>

<!-- Ozellikler -->
<div class="row">
    <div class="col-12 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Bu Sitede Neler Var?</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center">
                            <div class="avatar me-3">
                                <span class="avatar-initial rounded bg-label-primary">
                                    <i class="bx bx-time"></i>
                                </span>
                            </div>
                            <div>
                                <h6 class="mb-0">Uretkenlik Araclari</h6>
                                <small class="text-muted">Pomodoro, Gorev Takipcisi, Tarih Secici</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center">
                            <div class="avatar me-3">
                                <span class="avatar-initial rounded bg-label-success">
                                    <i class="bx bx-calculator"></i>
                                </span>
                            </div>
                            <div>
                                <h6 class="mb-0">Hesaplayicilar</h6>
                                <small class="text-muted">Sicaklik Donusturucu, Yas Hesaplayici</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center">
                            <div class="avatar me-3">
                                <span class="avatar-initial rounded bg-label-info">
                                    <i class="bx bx-box"></i>
                                </span>
                            </div>
                            <div>
                                <h6 class="mb-0">UI Bilesenleri</h6>
                                <small class="text-muted">Flashcards, Tabs, Tooltip ve daha fazlasi</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center">
                            <div class="avatar me-3">
                                <span class="avatar-initial rounded bg-label-warning">
                                    <i class="bx bxl-github"></i>
                                </span>
                            </div>
                            <div>
                                <h6 class="mb-0">API Entegrasyonlari</h6>
                                <small class="text-muted">GitHub, Reddit API ornekleri</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center">
                            <div class="avatar me-3">
                                <span class="avatar-initial rounded bg-label-danger">
                                    <i class="bx bx-accessibility"></i>
                                </span>
                            </div>
                            <div>
                                <h6 class="mb-0">Erisebilirlik</h6>
                                <small class="text-muted">ARIA, Klavye navigasyonu</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="d-flex align-items-center">
                            <div class="avatar me-3">
                                <span class="avatar-initial rounded bg-label-secondary">
                                    <i class="bx bx-mobile-alt"></i>
                                </span>
                            </div>
                            <div>
                                <h6 class="mb-0">Responsive Tasarim</h6>
                                <small class="text-muted">Mobil uyumlu arayuzler</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
