@{
  TempData.Keep();
  string? currentPage = ViewContext.HttpContext.Request.Path;
}

<!-- Menu -->
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

  <div class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
    <a asp-controller="Portfolio" asp-action="Index" class="app-brand-link">
      <span class="app-brand-logo demo">
        @await Html.PartialAsync("../_Partials/_Macros")
      </span>
      <span class="app-brand-text demo menu-text fw-bold ms-2">@TempData.Peek("appName")</span>
    </a>

    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
      <i class="icon-base bx bx-chevron-left d-block d-xl-none align-middle"></i>
    </a>
  </div>

  <div class="menu-divider mt-0"></div>

  <div class="menu-inner-shadow"></div>

  <ul class="menu-inner py-1">

    <!-- Portfolio -->
    <li class="menu-header small text-uppercase">
      <span class="menu-header-text">Portfolio</span>
    </li>

    <li class='menu-item@(currentPage == "/" || currentPage == "/Portfolio" || currentPage == "/Portfolio/Index" ? " active" : "")'>
      <a asp-controller="Portfolio" asp-action="Index" class="menu-link">
        <i class="menu-icon icon-base bx bx-home-smile"></i>
        <div class="text-truncate">Ana Sayfa</div>
      </a>
    </li>

    <li class='menu-item@(currentPage == "/Portfolio/Projects" ? " active" : "")'>
      <a asp-controller="Portfolio" asp-action="Projects" class="menu-link">
        <i class="menu-icon icon-base bx bx-folder"></i>
        <div class="text-truncate">Projeler</div>
      </a>
    </li>

    <li class='menu-item@(currentPage == "/Portfolio/Articles" ? " active" : "")'>
      <a asp-controller="Portfolio" asp-action="Articles" class="menu-link">
        <i class="menu-icon icon-base bx bx-book-open"></i>
        <div class="text-truncate">Makaleler</div>
      </a>
    </li>

    <li class='menu-item@(currentPage == "/Portfolio/Contact" ? " active" : "")'>
      <a asp-controller="Portfolio" asp-action="Contact" class="menu-link">
        <i class="menu-icon icon-base bx bx-envelope"></i>
        <div class="text-truncate">Iletisim</div>
      </a>
    </li>

    <li class='menu-item@(currentPage == "/Portfolio/Resume" ? " active" : "")'>
      <a asp-controller="Portfolio" asp-action="Resume" class="menu-link">
        <i class="menu-icon icon-base bx bx-user"></i>
        <div class="text-truncate">Ozgecmis</div>
      </a>
    </li>

    <!-- Uretkenlik Araclari -->
    <li class="menu-header small text-uppercase">
      <span class="menu-header-text">Uretkenlik Araclari</span>
    </li>

    <li class='menu-item@(currentPage == "/Tools/Pomodoro" ? " active" : "")'>
      <a asp-controller="Tools" asp-action="Pomodoro" class="menu-link">
        <i class="menu-icon icon-base bx bx-time"></i>
        <div class="text-truncate">Pomodoro Zamanlayici</div>
      </a>
    </li>

    <li class='menu-item@(currentPage == "/Tools/TaskTracker" ? " active" : "")'>
      <a asp-controller="Tools" asp-action="TaskTracker" class="menu-link">
        <i class="menu-icon icon-base bx bx-task"></i>
        <div class="text-truncate">Gorev Takipcisi</div>
      </a>
    </li>

    <li class='menu-item@(currentPage == "/Tools/DatePicker" ? " active" : "")'>
      <a asp-controller="Tools" asp-action="DatePicker" class="menu-link">
        <i class="menu-icon icon-base bx bx-calendar"></i>
        <div class="text-truncate">Tarih Secici</div>
      </a>
    </li>

    <!-- Hesaplayicilar -->
    <li class="menu-header small text-uppercase">
      <span class="menu-header-text">Hesaplayicilar</span>
    </li>

    <li class='menu-item@(currentPage == "/Tools/TemperatureConverter" ? " active" : "")'>
      <a asp-controller="Tools" asp-action="TemperatureConverter" class="menu-link">
        <i class="menu-icon icon-base bx bx-thermometer"></i>
        <div class="text-truncate">Sicaklik Donusturucu</div>
      </a>
    </li>

    <li class='menu-item@(currentPage == "/Tools/AgeCalculator" ? " active" : "")'>
      <a asp-controller="Tools" asp-action="AgeCalculator" class="menu-link">
        <i class="menu-icon icon-base bx bx-calculator"></i>
        <div class="text-truncate">Yas Hesaplayici</div>
      </a>
    </li>

    <!-- UI Bilesenleri -->
    <li class="menu-header small text-uppercase">
      <span class="menu-header-text">UI Bilesenleri</span>
    </li>

    <li class='menu-item@(currentPage.StartsWith("/Components") ? " active open" : "")'>
      <a href="javascript:void(0);" class="menu-link menu-toggle">
        <i class="menu-icon icon-base bx bx-box"></i>
        <div class="text-truncate">Bilesenler</div>
      </a>
      <ul class="menu-sub">
        <li class='menu-item@(currentPage == "/Components/Flashcards" ? " active" : "")'>
          <a asp-controller="Components" asp-action="Flashcards" class="menu-link">
            <div class="text-truncate">Bilgi Kartlari</div>
          </a>
        </li>
        <li class='menu-item@(currentPage == "/Components/Tabs" ? " active" : "")'>
          <a asp-controller="Components" asp-action="Tabs" class="menu-link">
            <div class="text-truncate">Sekmeler</div>
          </a>
        </li>
        <li class='menu-item@(currentPage == "/Components/Tooltip" ? " active" : "")'>
          <a asp-controller="Components" asp-action="Tooltip" class="menu-link">
            <div class="text-truncate">Ipucu Arayuzu</div>
          </a>
        </li>
        <li class='menu-item@(currentPage == "/Components/TextareaLimited" ? " active" : "")'>
          <a asp-controller="Components" asp-action="TextareaLimited" class="menu-link">
            <div class="text-truncate">Kisitli Metin Alani</div>
          </a>
        </li>
        <li class='menu-item@(currentPage == "/Components/CookieConsent" ? " active" : "")'>
          <a asp-controller="Components" asp-action="CookieConsent" class="menu-link">
            <div class="text-truncate">Cerez Onayi</div>
          </a>
        </li>
        <li class='menu-item@(currentPage == "/Components/AccessibleForm" ? " active" : "")'>
          <a asp-controller="Components" asp-action="AccessibleForm" class="menu-link">
            <div class="text-truncate">Erisebilir Form</div>
          </a>
        </li>
        <li class='menu-item@(currentPage == "/Components/DigitalId" ? " active" : "")'>
          <a asp-controller="Components" asp-action="DigitalId" class="menu-link">
            <div class="text-truncate">Dijital Kimlik</div>
          </a>
        </li>
        <li class='menu-item@(currentPage == "/Components/ReferenceCards" ? " active" : "")'>
          <a asp-controller="Components" asp-action="ReferenceCards" class="menu-link">
            <div class="text-truncate">Referans Kartlari</div>
          </a>
        </li>
        <li class='menu-item@(currentPage == "/Components/Changelog" ? " active" : "")'>
          <a asp-controller="Components" asp-action="Changelog" class="menu-link">
            <div class="text-truncate">Degisiklik Gunlugu</div>
          </a>
        </li>
      </ul>
    </li>

    <!-- API Entegrasyonlari -->
    <li class="menu-header small text-uppercase">
      <span class="menu-header-text">API Entegrasyonlari</span>
    </li>

    <li class='menu-item@(currentPage == "/Api/GitHubRandom" ? " active" : "")'>
      <a asp-controller="Api" asp-action="GitHubRandom" class="menu-link">
        <i class="menu-icon icon-base bx bxl-github"></i>
        <div class="text-truncate">GitHub Rastgele Depo</div>
      </a>
    </li>

    <li class='menu-item@(currentPage == "/Api/RedditClient" ? " active" : "")'>
      <a asp-controller="Api" asp-action="RedditClient" class="menu-link">
        <i class="menu-icon icon-base bx bxl-reddit"></i>
        <div class="text-truncate">Reddit Istemcisi</div>
      </a>
    </li>

    <li class='menu-item@(currentPage == "/Api/TrafficMaterials" ? " active" : "")'>
      <a asp-controller="Api" asp-action="TrafficMaterials" class="menu-link">
        <i class="menu-icon icon-base bx bx-traffic-cone"></i>
        <div class="text-truncate">Trafik Malzemeleri</div>
      </a>
    </li>

  </ul>

</aside>
<!-- / Menu -->
